<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.server.model.dao.user.UserMapper">
    <select id="findByUsername" parameterType="String" resultType="User">
        SELECT * FROM my_user where username = #{username};
    </select>

    <insert id="save" parameterType="User">
        INSERT INTO my_user (password, roles, username ) values (#{password}, #{roles}, #{username});
    </insert>

    <update id="updateByUsername" parameterType="User">
        UPDATE my_user set password = #{password} where username = #{username};
    </update>

</mapper>