<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.server.model.dao.token.TokenMapper">

    <select id="findByUsername" resultType="Token">
        SELECT * FROM TOKEN where EMPLOYEE_username = #{EMPLOYEE_username};
    </select>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM TOKEN where EMPLOYEE_username = #{EMPLOYEE_username};
    </delete>

    <insert id="save" parameterType="Token">
        INSERT INTO TOKEN (EMPLOYEE_username, refresh_token ) values (#{EMPLOYEE_username}, #{refresh_token});
    </insert>
</mapper>